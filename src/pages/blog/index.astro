---
import Layout from '../../layouts/Layout.astro';
import type { BlogPost } from '../../data/blog-data';
import { posts } from '../../data/blog-data';

export const prerender = true;
---

<Layout title="Blog - Amazon Boost">
  <div class="pt-24">
    <div class="container mx-auto px-4 py-12 max-w-7xl">
      <header class="mb-16">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Insights para Vendedores de Amazon</h1>
        <p class="text-xl text-gray-600 max-w-3xl">
          Estrategias expertas, consejos prácticos e información del sector para ayudarte a triunfar en Amazon.
        </p>
      </header>
      
      <div class="flex flex-wrap gap-4 mb-12">
        <input
          type="text"
          placeholder="Buscar artículos..."
          class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-amazon-orange focus:border-amazon-orange min-w-[250px]"
        />
      </div>

      <section class="mb-20">
        <h2 class="text-2xl font-bold mb-8">Últimos Artículos</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post: BlogPost) => (
            <article class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
              <div class="relative aspect-[16/9]">
                <img 
                  src={post.image} 
                  alt={post.title} 
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>
              <div class="p-6">
                <div class="flex items-center gap-4 text-sm text-gray-600 mb-3">
                  <time datetime={post.date}>
                    {new Date(post.date).toLocaleDateString('es-ES', { 
                      month: 'long', 
                      day: 'numeric', 
                      year: 'numeric' 
                    })}
                  </time>
                  <span>por {post.author}</span>
                </div>
                <h3 class="text-xl font-semibold mb-3 line-clamp-2">
                  <a href={`/blog/${post.slug}`} class="hover:text-amazon-orange">
                    {post.title}
                  </a>
                </h3>
                <p class="text-gray-600 mb-6 line-clamp-3">{post.excerpt}</p>
                <a 
                  href={`/blog/${post.slug}`} 
                  class="text-amazon-orange font-medium hover:text-opacity-80 transition-colors inline-flex items-center group"
                >
                  Leer más
                  <svg 
                    xmlns="http://www.w3.org/2000/svg" 
                    class="h-5 w-5 ml-1 transform transition-transform group-hover:translate-x-1" 
                    fill="none" 
                    viewBox="0 0 24 24" 
                    stroke="currentColor"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </section>

      <div class="flex justify-center gap-2">
        <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
          Anterior
        </button>
        <button class="px-4 py-2 bg-amazon-orange text-amazon-black rounded-lg hover:bg-opacity-90 transition-colors">
          1
        </button>
        <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
          2
        </button>
        <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
          3
        </button>
        <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
          Siguiente
        </button>
      </div>
    </div>
  </div>
</Layout>