---
import Layout from '../../layouts/Layout.astro';
import { allCaseStudies } from '../../data/case-studies/index.js';

const title = "Casos de Éxito | Amazon Boost";
const description = "Descubre cómo hemos ayudado a marcas a crecer y dominar sus categorías en Amazon con estrategias personalizadas y resultados probados.";
---

<Layout title={title} description={description}>
  <div class="bg-white py-16 sm:py-24">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-3xl text-center mb-16">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">Casos de Éxito</h1>
        <p class="mt-6 text-lg leading-8 text-gray-600">
          Descubre cómo hemos transformado negocios en Amazon y alcanzado resultados excepcionales para nuestros clientes.
        </p>
      </div>
      
      <div class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
        {allCaseStudies.map((caseStudy) => (
          <div class="flex flex-col overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
            <div class="flex-shrink-0">
              <img class="h-56 w-full object-cover" src={caseStudy.image} alt={caseStudy.title} />
            </div>
            <div class="flex flex-1 flex-col justify-between bg-white p-6">
              <div class="flex-1">
                <p class="text-sm font-medium text-blue-600">
                  {caseStudy.industry}
                </p>
                <a href={`/casos-de-exito/${caseStudy.slug}`} class="mt-2 block">
                  <h3 class="text-xl font-semibold text-gray-900 hover:text-blue-600 transition-colors duration-200">{caseStudy.title}</h3>
                  <p class="mt-3 text-base text-gray-500">{caseStudy.client}</p>
                </a>
                <div class="mt-4 flex flex-wrap gap-2">
                  {caseStudy.results.revenue && (
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-green-100 text-green-800">
                      Ingresos {caseStudy.results.revenue}
                    </span>
                  )}
                  {caseStudy.results.conversion && (
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-sm font-medium bg-blue-100 text-blue-800">
                      Conversión {caseStudy.results.conversion}
                    </span>
                  )}
                </div>
              </div>
              <div class="mt-6">
                <a href={`/casos-de-exito/${caseStudy.slug}`} class="text-base font-semibold text-blue-600 hover:text-blue-800 transition-colors duration-200">
                  Ver Caso Completo →
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</Layout>