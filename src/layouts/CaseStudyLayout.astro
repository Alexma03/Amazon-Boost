---
import Layout from './Layout.astro';

interface Props {
  title: string;
  description: string;
  caseStudy: {
    title: string;
    image: string;
    industry: string;
    challenge: string;
    solution: string;
    approach: string[];
    results: {
      revenue: string;
      ranking: string;
      conversion: string;
      additional?: {
        label: string;
        value: string;
      }[];
    };
    testimonial?: {
      quote: string;
      author: string;
      position: string;
    };
    conclusion: string;
    fullContent?: {
      introduction: string;
      sections: {
        title: string;
        content: string;
        bulletPoints?: string[];
        imageNote?: string;
      }[];
      cta: string;
    };
  };
}

const { title, description, caseStudy } = Astro.props;
---

<Layout title={title} description={description}>
  <div class="py-12 md:py-20 bg-amazon-lightgray">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <!-- Hero section -->
        <div class="mb-12">
          <a href="/#case-studies" class="inline-flex items-center text-amazon-orange mb-6 hover:underline">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Volver a Casos de Éxito
          </a>
          <h1 class="text-4xl md:text-5xl font-bold mb-6 text-amazon-darkblue">{caseStudy.title}</h1>
          <div class="flex flex-wrap items-center text-gray-600 text-sm mb-8">
            <span class="bg-amazon-orange/10 text-amazon-orange rounded-full px-3 py-1 mr-3 mb-2">
              {caseStudy.industry}
            </span>
          </div>
        </div>
        
        <!-- Main image -->
        <div class={`rounded-xl overflow-hidden shadow-lg mb-12 ${caseStudy.title.includes('Categoría Bebés') ? 'hidden' : ''}`}>
          <img src={caseStudy.image} alt={caseStudy.title} class="w-full h-auto object-cover" />
        </div>
        
        <!-- Challenge section -->
        <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100 mb-8">
          <div class={`${caseStudy.title.includes('Categoría Bebés') ? 'grid md:grid-cols-2 gap-8 items-start' : ''}`}>
            <div>
              <h2 class="text-2xl font-bold mb-4 text-amazon-darkblue border-l-4 border-amazon-orange pl-4">
                El reto
              </h2>
              <div class="text-gray-700 space-y-4">
                {caseStudy.challenge.split('\n\n').map(paragraph => (
                  <p>{paragraph}</p>
                ))}
              </div>
            </div>
            {caseStudy.title.includes('Categoría Bebés') && (
              <div class="flex justify-center">
                <img src={caseStudy.image} alt={caseStudy.title} class="w-full max-w-xs rounded-lg shadow-md" />
              </div>
            )}
          </div>
        </div>
        
        <!-- Solution section -->
        <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100 mb-8">
          <h2 class="text-2xl font-bold mb-4 text-amazon-darkblue border-l-4 border-amazon-orange pl-4">
            La estrategia
          </h2>
          <p class="text-gray-700 mb-6">
            {caseStudy.solution}
          </p>
          
          <h3 class="text-xl font-semibold mb-4 text-amazon-darkblue">Cómo lo hicimos:</h3>
          <ul class="space-y-4 mb-4">
            {caseStudy.approach.map(step => (
              <li class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amazon-orange" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                </div>
                <span class="ml-3 text-gray-700">{step}</span>
              </li>
            ))}
          </ul>
        </div>
        
        <!-- Results section -->
        <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100 mb-8">
          <h2 class="text-2xl font-bold mb-6 text-amazon-darkblue border-l-4 border-amazon-orange pl-4">
            El resultado
          </h2>
          
          <div class="grid md:grid-cols-3 gap-6 mb-8">
            <div class="bg-amazon-lightgray rounded-lg p-5 text-center transform hover:scale-105 transition-transform">
              <div class="text-3xl font-bold text-amazon-orange mb-2">{caseStudy.results.revenue}</div>
              <div class="text-gray-600 font-medium">Incremento de ingresos</div>
            </div>
            <div class="bg-amazon-lightgray rounded-lg p-5 text-center transform hover:scale-105 transition-transform">
              <div class="text-3xl font-bold text-amazon-orange mb-2">{caseStudy.results.ranking}</div>
              <div class="text-gray-600 font-medium">Reconocimiento en categoría</div>
            </div>
            <div class="bg-amazon-lightgray rounded-lg p-5 text-center transform hover:scale-105 transition-transform">
              <div class="text-3xl font-bold text-amazon-orange mb-2">{caseStudy.results.conversion}</div>
              <div class="text-gray-600 font-medium">Inversión publicitaria</div>
            </div>
          </div>

          {caseStudy.results.additional && (
            <div class="space-y-3 mb-6">
              {caseStudy.results.additional.map(item => (
                <div class="flex justify-between items-center border-b border-gray-200 pb-2">
                  <span class="text-gray-600">{item.label}:</span>
                  <span class="font-bold text-amazon-darkblue">{item.value}</span>
                </div>
              ))}
            </div>
          )}
          
          {caseStudy.results.proofImage && (
            <div class={`mt-6 ${caseStudy.title.includes('Categoría Bebés') ? 'max-w-4xl mx-auto' : 'max-w-2xl mx-auto'}`}>
              <div class={`${caseStudy.title.includes('Categoría Bebés') ? 'bg-gray-900 p-6 rounded-xl' : 'bg-white p-4 rounded-lg'} shadow-lg`}>
                <div class="relative group cursor-pointer" onclick="openImageModal(this.querySelector('img').src, this.querySelector('img').alt)">
                  <img 
                    src={caseStudy.results.proofImage.url} 
                    alt={caseStudy.results.proofImage.alt}
                    class="w-full h-auto rounded-lg shadow-md transition-transform duration-300 group-hover:scale-105"
                  />
                  <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-10 transition-opacity duration-300 rounded-lg flex items-center justify-center">
                    <svg class="w-8 h-8 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h4a1 1 0 010 2H6.414l2.293 2.293a1 1 0 11-1.414 1.414L5 6.414V8a1 1 0 01-2 0V4zm9 1a1 1 0 010-2h4a1 1 0 011 1v4a1 1 0 01-2 0V6.414l-2.293 2.293a1 1 0 11-1.414-1.414L13.586 5H12zm-9 7a1 1 0 012 0v1.586l2.293-2.293a1 1 0 111.414 1.414L6.414 15H8a1 1 0 010 2H4a1 1 0 01-1-1v-4zm13-1a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 010-2h1.586l-2.293-2.293a1 1 0 111.414-1.414L15 13.586V12a1 1 0 011-1z" clip-rule="evenodd" />
                    </svg>
                  </div>
                </div>
                <p class={`text-center text-sm font-medium mt-3 ${caseStudy.title.includes('Categoría Bebés') ? 'text-gray-300' : 'text-gray-700'}`}>
                  {caseStudy.results.proofImage.caption}
                </p>
                <p class={`text-center text-xs mt-1 ${caseStudy.title.includes('Categoría Bebés') ? 'text-gray-400' : 'text-gray-500'}`}>
                  {caseStudy.results.proofImage.source}
                </p>
              </div>
            </div>
          )}
        </div>
        
        <!-- Testimonial section (if available) -->
        {caseStudy.testimonial && (
          <div class="bg-amazon-darkblue text-white rounded-xl p-8 shadow-lg mb-8">
            <div class="flex flex-col items-center text-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-amazon-orange mb-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
              </svg>
              <p class="text-lg italic mb-6">{caseStudy.testimonial.quote}</p>
              <div>
                <p class="font-bold">{caseStudy.testimonial.author}</p>
                <p class="text-sm text-gray-300">{caseStudy.testimonial.position}</p>
              </div>
            </div>
          </div>
        )}
        
        <!-- Conclusion -->
        <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100 mb-8">
          <h2 class="text-2xl font-bold mb-4 text-amazon-darkblue border-l-4 border-amazon-orange pl-4">
            Conclusión
          </h2>
          <p class="text-gray-700">
            {caseStudy.conclusion}
          </p>
        </div>
        
        <!-- Full Content Sections (if available) -->
        {caseStudy.fullContent && (
          <div class="space-y-8 mb-8">
            <!-- Introduction -->
            <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
              <h2 class="text-2xl font-bold mb-4 text-amazon-darkblue border-l-4 border-amazon-orange pl-4">
                Introducción
              </h2>
              <p class="text-gray-700">
                {caseStudy.fullContent.introduction}
              </p>
            </div>

            <!-- Detailed Sections -->
            {caseStudy.fullContent.sections.map((section, index) => (
              <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
                <h2 class="text-2xl font-bold mb-4 text-amazon-darkblue border-l-4 border-amazon-orange pl-4">
                  {section.title}
                </h2>
                <p class="text-gray-700 mb-4">
                  {section.content}
                </p>
                
                {section.bulletPoints && (
                  <ul class="space-y-3 mb-4">
                    {section.bulletPoints.map(point => (
                      <li class="flex items-start">
                        <div class="flex-shrink-0 mt-1">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amazon-orange" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                          </svg>
                        </div>
                        <span class="ml-3 text-gray-700">{point}</span>
                      </li>
                    ))}
                  </ul>
                )}
                
                {section.imageNote && (
                  <div class={`bg-amber-50 border border-amber-200 rounded-lg p-4 mt-4 ${caseStudy.title.includes('Categoría Bebés') ? 'max-w-md mx-auto' : ''}`}>
                    <p class="text-amber-800 italic text-sm">
                      {section.imageNote}
                    </p>
                  </div>
                )}
              </div>
            ))}
          </div>
        )}
        
        <!-- CTA -->
        <div class="mt-12 text-center">
          {caseStudy.fullContent?.cta ? (
            <div class="bg-amazon-darkblue text-white rounded-xl p-8 shadow-lg mb-8">
              <p class="text-lg mb-6">{caseStudy.fullContent.cta}</p>
              <a href="/#contact" class="inline-block bg-amazon-orange hover:bg-amber-600 text-white font-semibold py-3 px-8 rounded-lg transition-colors duration-300 shadow-md hover:shadow-lg">
                Reservar Auditoría Gratuita
              </a>
            </div>
          ) : (
            <a href="/#contact" class="inline-block bg-amazon-orange hover:bg-amber-600 text-white font-semibold py-3 px-8 rounded-lg transition-colors duration-300 shadow-md hover:shadow-lg">
              ¿Quieres resultados similares? Contáctanos
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  function openImageModal(src, alt) {
    // Create modal overlay
    const modal = document.createElement('div');
    modal.className = 'fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50 p-4';
    modal.style.cursor = 'zoom-out';
    
    // Create modal content
    const modalContent = document.createElement('div');
    modalContent.className = 'relative max-w-full max-h-full';
    
    // Create image
    const modalImage = document.createElement('img');
    modalImage.src = src;
    modalImage.alt = alt;
    modalImage.className = 'max-w-full max-h-full object-contain rounded-lg shadow-2xl';
    
    // Create close button
    const closeButton = document.createElement('button');
    closeButton.innerHTML = '×';
    closeButton.className = 'absolute top-4 right-4 text-white text-3xl font-bold hover:text-gray-300 transition-colors duration-200 bg-black bg-opacity-50 rounded-full w-10 h-10 flex items-center justify-center';
    closeButton.onclick = (e) => {
      e.stopPropagation();
      document.body.removeChild(modal);
      document.body.style.overflow = '';
    };
    
    // Assemble modal
    modalContent.appendChild(modalImage);
    modalContent.appendChild(closeButton);
    modal.appendChild(modalContent);
    
    // Close on background click
    modal.onclick = () => {
      document.body.removeChild(modal);
      document.body.style.overflow = '';
    };
    modalContent.onclick = (e) => e.stopPropagation();
    
    // Add to page and prevent body scroll
    document.body.appendChild(modal);
    document.body.style.overflow = 'hidden';
  }
  
  // Make function global
  window.openImageModal = openImageModal;
</script>