---
import Layout from './Layout.astro';
const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} - Amazon Boost`}>
  <div class="pt-24">
    <div class="container mx-auto px-4 py-12 max-w-3xl">
      <a href="/blog" class="inline-flex items-center text-amazon-orange mb-6 group hover:text-opacity-80 transition-colors">
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          class="h-5 w-5 mr-2 transform transition-transform group-hover:-translate-x-1" 
          fill="none" 
          viewBox="0 0 24 24" 
          stroke="currentColor"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to all articles
      </a>
      
      <header class="mb-10">
        <div class="mb-4">
          <span class="inline-block bg-amazon-orange text-amazon-black px-3 py-1 rounded-full text-sm font-medium">
            {frontmatter.category}
          </span>
        </div>
        <h1 class="text-3xl md:text-4xl font-bold mb-4">{frontmatter.title}</h1>
        <div class="flex items-center gap-4 text-gray-600 mb-6">
          <time datetime={frontmatter.date}>
            {new Date(frontmatter.date).toLocaleDateString('en-US', { 
              month: 'long', 
              day: 'numeric', 
              year: 'numeric' 
            })}
          </time>
          <span class="flex items-center">
            by {frontmatter.author}
          </span>
        </div>
        <div class="relative aspect-[16/9] mb-8">
          <img 
            src={frontmatter.image} 
            alt={frontmatter.title} 
            class="w-full h-full object-cover rounded-xl"
          />
        </div>
      </header>
      
      <article class="prose prose-lg max-w-none">
        <slot />
      </article>
      
      <div class="mt-16 pt-8 border-t border-gray-200">
        <h3 class="text-xl font-semibold mb-4">Share this article</h3>
        <div class="flex gap-4">
          <a href="#" class="text-gray-600 hover:text-amazon-orange transition-colors">
            <span class="sr-only">Share on Twitter</span>
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
            </svg>
          </a>
          <a href="#" class="text-gray-600 hover:text-amazon-orange transition-colors">
            <span class="sr-only">Share on LinkedIn</span>
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"></path>
            </svg>
          </a>
          <a href="#" class="text-gray-600 hover:text-amazon-orange transition-colors">
            <span class="sr-only">Share on Facebook</span>
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd"></path>
            </svg>
          </a>
        </div>
      </div>
      
      <div class="mt-10 pt-8 border-t border-gray-200">
        <h3 class="text-xl font-semibold mb-4">Related articles</h3>
        <div class="grid md:grid-cols-2 gap-6">
          <!-- Related articles will be rendered by the blog post page -->
        </div>
      </div>
    </div>
  </div>
</Layout>
