---
import Layout from './Layout.astro';

interface Props {
  title: string;
  description: string;
  service: {
    title: string;
    description: string;
    benefits: {
      title: string;
      items: Array<string | { header: string; content: string }>;
    };
    conclusion: string;
  };
}

const { title, description, service } = Astro.props;
---

<Layout title={title} description={description}>
  <div class="py-12 md:py-20 bg-amazon-lightgray">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-amazon-darkblue">{service.title}</h1>
        <p class="text-lg text-gray-700 mb-8">
          {service.description}
        </p>
        
        <div class="bg-white rounded-xl p-8 shadow-lg border border-gray-100">
          <h2 class="text-2xl font-bold mb-6 text-amazon-darkblue border-l-4 border-amazon-orange pl-4">
            {service.benefits.title}
          </h2>
          
          <ul class="space-y-6 mb-8">
            {service.benefits.items.map((item) => {
              if (typeof item === 'string') {
                return (
                  <li class="flex items-start">
                    <div class="flex-shrink-0 mt-1">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amazon-orange" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <span class="ml-3 text-gray-700">{item}</span>
                  </li>
                );
              } else {
                return (
                  <li class="border-b pb-4 last:border-0 last:pb-0">
                    <div class="flex items-start">
                      <div class="flex-shrink-0 mt-1">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amazon-orange" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                      </div>
                      <div class="ml-3">
                        <h3 class="font-bold text-lg text-amazon-darkblue mb-2">{item.header}</h3>
                        <div class="text-gray-700 whitespace-pre-line">{item.content}</div>
                      </div>
                    </div>
                  </li>
                );
              }
            })}
          </ul>
          
          <p class="text-gray-700 italic border-l-4 border-amazon-orange pl-4 bg-amber-50 p-4 rounded">
            {service.conclusion}
          </p>
        </div>
        
        <div class="mt-12 text-center">
          <a href="/#contact" class="inline-block bg-amazon-orange hover:bg-amber-600 text-white font-semibold py-3 px-8 rounded-lg transition-colors duration-300 shadow-md hover:shadow-lg">
            ¿Te interesa este servicio? Contáctanos
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>