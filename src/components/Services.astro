---
const services = [
  {
    icon: "audit",
    title: "Account Audit",
    description: "Comprehensive analysis of your Amazon account performance, identifying opportunities and areas for improvement.",
    link: "#audit"
  },
  {
    icon: "research",
    title: "Market Research",
    description: "Data-driven insights into market trends, competitor analysis, and growth opportunities in your niche.",
    link: "#research"
  },
  {
    icon: "optimization",
    title: "Listing Optimization",
    description: "Expert optimization of your product listings for maximum visibility and conversion rates.",
    link: "#optimization"
  },
  {
    icon: "advertising",
    title: "PPC Management",
    description: "Strategic management of your Amazon advertising campaigns to maximize ROI and sales.",
    link: "#advertising"
  }
];
---

<section id="services" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Our Services</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Comprehensive solutions to boost your Amazon business performance and profitability.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map(service => (
        <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow">
          <div class="text-amazon-orange mb-6">
            {service.icon === 'audit' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
              </svg>
            )}
            {service.icon === 'research' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            )}
            {service.icon === 'optimization' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            )}
            {service.icon === 'advertising' && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
              </svg>
            )}
          </div>
          <h3 class="text-xl font-semibold mb-3">{service.title}</h3>
          <p class="text-gray-600 mb-6">{service.description}</p>
          <a href={service.link} class="text-amazon-orange font-medium hover:text-opacity-80 transition-colors inline-flex items-center">
            Learn More
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>