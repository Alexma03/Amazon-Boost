---
const services = [
  {
    icon: "audit",
    title: "Auditoría de Cuenta",
    description: "Análisis exhaustivo del rendimiento de tu cuenta de Amazon, identificando oportunidades y áreas de mejora.",
    link: "/servicios/auditoria-de-cuenta"
  },
  {
    icon: "research",
    title: "Estudio de Mercado",
    description: "Información basada en datos sobre tendencias del mercado, análisis de competidores y oportunidades de crecimiento en tu nicho.",
    link: "/servicios/auditoria-de-cuenta"
  },
  {
    icon: "optimization",
    title: "Optimización de Listados",
    description: "Optimización experta de tus listados de productos para máxima visibilidad y tasas de conversión.",
    link: "/servicios/optimizacion-de-listados"
  },
  {
    icon: "advertising",
    title: "Estrategias de PPC",
    description: "Gestión estratégica de tus campañas publicitarias en Amazon para maximizar el ROI y las ventas.",
    link: "/servicios/gestion-de-ppc"
  },
  {
    icon: "management",
    title: "Gestión Integral de Cuenta",
    description: "Administración profesional de tu cuenta de Amazon para maximizar ventas y evitar problemas con la plataforma.",
    link: "/servicios/gestion-de-cuenta"
  }
];

const firstRowServices = services.slice(0, 3);
const secondRowServices = services.slice(3);
---

<section id="services" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Nuestros Servicios</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Soluciones integrales para impulsar el rendimiento y la rentabilidad de tu negocio en Amazon.
      </p>
    </div>

    <!-- Primera fila: 3 columnas -->
    <div class="grid md:hidden lg:grid lg:grid-cols-3 gap-8 place-items-center">
      {firstRowServices.map(service => (
        <div class="bg-white rounded-xl overflow-hidden shadow-md border border-gray-100 hover:shadow-xl hover:border-amazon-orange/30 hover:-translate-y-2 transition-all duration-300 group w-full mx-auto">
          <div class="p-6 relative">
            <div class="absolute top-0 left-0 w-1 h-0 bg-amazon-orange group-hover:h-full transition-all duration-300"></div>
            <div class="text-amazon-orange mb-4 transform group-hover:scale-110 transition-transform duration-300">
              {service.icon === 'audit' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                </svg>
              )}
              {service.icon === 'research' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
              )}
              {service.icon === 'optimization' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              )}
            </div>
            
            <h3 class="text-xl font-bold mb-3 group-hover:text-amazon-orange transition-colors">{service.title}</h3>
            <p class="text-gray-600 mb-4 line-clamp-2">{service.description}</p>
            
            <a href={service.link} class="text-amazon-orange font-medium group-hover:text-amazon-orange/90 inline-flex items-center relative group-hover:pl-1 transition-all">
              <span class="relative z-10">Saber Más</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>

    <!-- Segunda fila: 2 columnas con las cards juntas -->
    <div class="grid md:hidden lg:grid mt-8 lg:grid-cols-2 gap-8">
      {secondRowServices.map((service, index) => (
        <div class={`bg-white rounded-xl overflow-hidden shadow-md border border-gray-100 hover:shadow-xl hover:border-amazon-orange/30 hover:-translate-y-2 transition-all duration-300 group w-full xl:w-[478px] ${index === 0 ? 'justify-self-end' : ''}`}>
          <div class="p-6 relative">
            <div class="absolute top-0 left-0 w-1 h-0 bg-amazon-orange group-hover:h-full transition-all duration-300"></div>
            <div class="text-amazon-orange mb-4 transform group-hover:scale-110 transition-transform duration-300">
              {service.icon === 'advertising' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
                </svg>
              )}
              {service.icon === 'management' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                </svg>
              )}
            </div>
            
            <h3 class="text-xl font-bold mb-3 group-hover:text-amazon-orange transition-colors">{service.title}</h3>
            <p class="text-gray-600 mb-4 line-clamp-2">{service.description}</p>
            
            <a href={service.link} class="text-amazon-orange font-medium group-hover:text-amazon-orange/90 inline-flex items-center relative group-hover:pl-1 transition-all">
              <span class="relative z-10">Saber Más</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="hidden md:grid lg:hidden grid-cols-1 md:grid-cols-2 gap-8 place-items-center">
      {services.map((service, index) => (
        <div class={`bg-white rounded-xl overflow-hidden shadow-md border border-gray-100 hover:shadow-xl hover:border-amazon-orange/30 hover:-translate-y-2 transition-all duration-300 group w-full ${index === services.length - 1 ? 'md:col-span-2' : ''}`}>
          <div class="p-6 relative">
            <div class="absolute top-0 left-0 w-1 h-0 bg-amazon-orange group-hover:h-full transition-all duration-300"></div>
            <div class="text-amazon-orange mb-4 transform group-hover:scale-110 transition-transform duration-300">
              {service.icon === 'audit' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                </svg>
              )}
              {service.icon === 'research' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
              )}
              {service.icon === 'optimization' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              )}
              {service.icon === 'advertising' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z" />
                </svg>
              )}
              {service.icon === 'management' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-14 w-14" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                </svg>
              )}
            </div>
            
            <h3 class="text-xl font-bold mb-3 group-hover:text-amazon-orange transition-colors">{service.title}</h3>
            <p class="text-gray-600 mb-4 line-clamp-2">{service.description}</p>
            
            <a href={service.link} class="text-amazon-orange font-medium group-hover:text-amazon-orange/90 inline-flex items-center relative group-hover:pl-1 transition-all">
              <span class="relative z-10">Saber Más</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>