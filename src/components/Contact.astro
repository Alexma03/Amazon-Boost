---
const subjects = [
  "Solicitud de Auditoría de Cuenta",
  "Consulta de Investigación de Mercado",
  "Ayuda con Optimización de Listados",
  "Servicios de Gestión de PPC",
  "Consulta General",
];

const contactInfo = {
  email: "info@amazonboost.agency",
  phone: "+34 671 470 651",
  social: {
    linkedin: "linkedin.com/in/sergio-de-román-373b7634b",
  },
};
---

<section id="contact" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Solicita una auditoría gratuita
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        ¿Listo para impulsar tu negocio en Amazon? Contáctanos hoy para una
        consulta.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-12">
      <div>
        <form id="contactForm" class="space-y-6" action="https://contact-form-worker.alex03marcos.workers.dev/" method="POST" enctype="multipart/form-data">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label
                for="name"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Nombre *</label
              >
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-amazon-orange focus:border-amazon-orange"
              />
            </div>
            <div>
              <label
                for="email"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Correo electrónico *</label
              >
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-amazon-orange focus:border-amazon-orange"
              />
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label
                for="phone"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Teléfono</label
              >
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-amazon-orange focus:border-amazon-orange"
              />
            </div>
            <div>
              <label
                for="company"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Empresa</label
              >
              <input
                type="text"
                id="company"
                name="company"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-amazon-orange focus:border-amazon-orange"
              />
            </div>
          </div>

          <div>
            <label
              for="subject"
              class="block text-sm font-medium text-gray-700 mb-1"
              >Asunto *</label
            >
            <select
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-amazon-orange focus:border-amazon-orange"
            >
              <option value="">Selecciona un asunto</option>
              {
                subjects.map((subject) => (
                  <option value={subject}>{subject}</option>
                ))
              }
            </select>
          </div>

          <div>
            <label
              for="message"
              class="block text-sm font-medium text-gray-700 mb-1"
              >Mensaje *</label
            >
            <textarea
              id="message"
              name="message"
              required
              rows="4"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-amazon-orange focus:border-amazon-orange"
            ></textarea>
          </div>

          <div class="flex items-start">
            <input
              type="checkbox"
              id="consent"
              name="consent"
              value="true"
              required
              class="mt-1 h-4 w-4 text-amazon-orange focus:ring-amazon-orange border-gray-300 rounded"
            />
            <label for="consent" class="ml-2 text-sm text-gray-600">
              Doy mi consentimiento para que mis datos sean procesados de
              acuerdo con la Política de Privacidad. *
            </label>
          </div>

          <button
            type="submit"
            class="w-full bg-amazon-orange text-amazon-black px-8 py-3 rounded-full font-medium hover:bg-opacity-90 transition-colors"
          >
            Enviar Mensaje
          </button>
        </form>
      </div>

      <div>
        <div class="bg-amazon-lightgray p-8 rounded-xl mb-8">
          <h3 class="text-xl font-semibold mb-6">Información de Contacto</h3>
          <div class="space-y-4">
            <div class="flex items-start gap-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-amazon-orange"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              <div>
                <div class="font-medium">Correo electrónico</div>
                <a
                  href={`mailto:${contactInfo.email}`}
                  class="text-amazon-orange hover:text-opacity-80"
                  >{contactInfo.email}</a
                >
              </div>
            </div>
            <div class="flex items-start gap-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 text-amazon-orange"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
              <div>
                <div class="font-medium">Teléfono</div>
                <a
                  href={`tel:${contactInfo.phone}`}
                  class="text-amazon-orange hover:text-opacity-80"
                  >{contactInfo.phone}</a
                >
              </div>
            </div>
          </div>

          <div class="mt-8">
            <h4 class="font-medium mb-4">Síguenos</h4>
            <div class="flex gap-4">
              <a
                href="https://www.linkedin.com/in/sergio-de-román-373b7634b"
                target="_blank"
                rel="noopener noreferrer"
                class="text-amazon-orange hover:text-opacity-80"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById("contactForm");

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const formData = new FormData(e.target as HTMLFormElement);
    const data = Object.fromEntries(formData);

    try {
      // Add your form submission logic here
      console.log("Form data:", data);
      alert(
        "¡Gracias por tu mensaje! Nos pondremos en contacto contigo pronto.",
      );
      (e.target as HTMLFormElement).reset();
    } catch (error) {
      console.error("Error submitting form:", error);
      alert(
        "Hubo un error al enviar el formulario. Por favor, inténtalo de nuevo.",
      );
    }
  });
</script>
