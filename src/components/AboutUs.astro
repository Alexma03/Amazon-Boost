<style>
  .rotating-border-container {
    position: relative;
    overflow: hidden;
    padding: 3px;
    border-radius: 1rem;
    z-index: 10;
  }

  .rotating-border {
    position: absolute;
    content: "";
    inset: -50%;
    width: 200%;
    height: 200%;
    background: conic-gradient(
      #ff9900 0%,
      #232f3e 30%,
      #131921 50%,
      #232f3e 70%,
      #ff9900 100%
    );
    animation: rotate 12s linear infinite;
    z-index: 0;
  }

  .image-container {
    position: relative;
    z-index: 1;
    background-color: #131921;
    overflow: hidden;
    height: 100%;
    width: 100%;
    border-radius: 0.875rem;
  }
  
  @keyframes rotate {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
  
  .card {
    background: linear-gradient(90deg, #ff9900, #ffb347, #ffc67a, #ff9900);
    background-size: 300%;
    border-radius: 0.5rem;
    padding: 1rem;
    text-align: center;
    box-shadow: 0 4px 15px rgba(255, 153, 0, 0.2);
    transition: all 0.3s ease;
  }
  
  .card:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(255, 153, 0, 0.3);
  }
  
  @media (prefers-reduced-motion: reduce) {
    .rotating-border {
      animation: none;
    }
  }
</style>

